server {
  listen 8000 default_server;
  server_name _;
  server_name_in_redirect off;

  rewrite ^/donate(.*) https://www.oaf.org.au/donate/planningalerts/ permanent;
  rewrite ^/donations(.*) https://www.oaf.org.au/donate/planningalerts/ permanent;

  root /srv/www/production/current/public;
  passenger_enabled on;
  passenger_ruby /usr/local/rvm/gems/ruby-3.1.3/wrappers/ruby;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }
}

server {
  listen 9000 default_server;
  server_name _;
  server_name_in_redirect off;

  root /srv/www/staging/current/public;
  passenger_enabled on;
  passenger_ruby /usr/local/rvm/gems/ruby-3.1.3/wrappers/ruby;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }
}
