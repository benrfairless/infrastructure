server {
  listen 80;
  server_name www.{{ planningalerts_domain }};

  rewrite ^/donate(.*) https://www.oaf.org.au/donate/planningalerts/ permanent;
  rewrite ^/donations(.*) https://www.oaf.org.au/donate/planningalerts/ permanent;

  root /srv/www/production/current/public;
  passenger_enabled on;
  passenger_ruby /usr/local/rvm/gems/ruby-2.6.6/wrappers/ruby;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }
}

server {
  listen 80;
  server_name api.{{ planningalerts_domain }};

  root /srv/www/production/current/public;
  passenger_enabled on;
  passenger_ruby /usr/local/rvm/gems/ruby-2.6.6/wrappers/ruby;
}
